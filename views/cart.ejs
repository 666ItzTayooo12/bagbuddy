<%- include('./partials/header') %>
    <div class="w-full h-screen flex">

        <!-- product and product price -->
        <div class="w-[70%] h-screen flex flex-col">
            <%user.cart.forEach((item)=>{%>
                <div class="w-full h-full flex items-start px-20 py-5 gap-10">
                    <!-- product -->
                    <div class="w-[30%] rounded-md overflow-hidden">
                        <div class="w-full flex justify-center items-center h-80 bg-[<%=item.bgcolor%>]">
                            <img class="h-[18rem]"
                                src="data:<%=item.imageType %>;base64,<%=item.image.toString('base64') %>" alt="">
                        </div>
                    </div>
                    <!-- final Price breakdown -->
                    <div class="w-[70%]">
                        <h3 class="text-xl">
                            <%=item.name%>
                        </h3>
                        <div class="px-10 mt-5">
                            <div class="flex mt-2">
                                <h4 class="w-1/3">Total MRP</h4>
                                <h4>₹ <%=item.price%>
                                </h4>
                            </div>
                            <div class="flex mt-2">
                                <h4 class="w-1/3">Discount on MRP</h4>
                                <h4>₹ <%=item.discount%>
                                </h4>
                            </div>
                        </div>
                        <div class="w-full h-[1px] bg-black mt-10"></div>
                        <div class="flex mt-5">
                            <div class="w-[65%] flex justify-between px-5 py-4 bg-[<%=item.panelcolor%>]">
                            <!-- <h3 class="text-2xl">Clinge Bag</h3> -->
                            <div class="flex items-center gap-2">
                                <i
                                    class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                                <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                                <i
                                    class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                            </div>
                        </div>
                        <div class="w-[35%] flex items-center justify-between px-5 py-3 bg-[<%=item.textcolor%>]">
                            <h4 class="text-lg">Net Total </h4>
                            <h2 class="text-lg">₹ <%=item.price+20-item.discount %></h2>
                        </div>
                            <!-- <h3 class="w-1/3 text-xl">Total Amount</h3>
                            <h3 class="font-semibold text-xl text-green-600">₹ <%=item.price+20-item.discount %></h3> -->
                        </div>
                        <form action=""></form>
                    </div>
                </div>
                <%})%>
        </div>

        <!-- Net Total Subtotal -->
        <div class="w-[30%] ml-10">
            <h2 class="text-xl font-bold">Total Price Breakdown</h2>     
            <div class="flex mt-2">
                <h4 class="w-1/3">Total Product Price:</h4>
                <h4>₹<%=totalProductPrice%> </h4>
            </div>
            <div class="flex mt-2">
                <h4 class="w-1/3">Total Discount:</h4>
                <h4>₹<%=totalDiscount%></h4>
            </div>
            <div class="flex mt-2">
                <h4 class="w-1/3">Platform Fee:</h4>
                <h4>₹20</h4>
            </div>
            <div class="flex mt-2">
                <h4 class="w-1/3">Shipping Fee:</h4>
                <h4>FREE</h4>
            </div>
            <div class="flex mt-2">
                <h4 class="w-1/3">Payable Amount :</h4>
                <h4 class="text-green-600 font-semibold text-xl">₹<%=totalProductPrice-totalDiscount+20%></h4>
            </div>
            <!-- <h3 class="text-xl text-green-600 font-semibold">₹</h3> -->
            <a class="mt-3 inline-block" href=""><button class="bg-yellow-400 rounded-md px-3 py-2">Proceed To Buy</button></a>
        </div>
    </div>

    <%- include('./partials/footer') %>